<h1><%= @user.name %></h1>
<br>
<%= @user.name %>, <%= @user.email %>
<br>

<%= image_tag @user.avatar.url(:medium) %>
<div class="row">
	<div class="col-md-8">
		<% if @user.events.any? %>
		<h3>Created <%= @user.events.count %> event(s)</h3>
		<ol class="events">
			<%= render @events %>
		</ol>
		<%= will_paginate @events %>
		<% end %>
	</div>
</div>