<h1>All users</h1>


<ul class="users">
  <% @users.each do |user| %>
  <li>
  <%= image_tag user.avatar.url(:medium) %>
  <h2><%= link_to user.name, user %></h2>
  <% if current_user.admin? && !current_user?(user) %>
  <%= link_to "delete", user, method: :delete %>
  <% end %>
  </li>
  <% end %>
</ul>
